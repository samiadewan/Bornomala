@model Book
@{
    ViewData["Title"] = "BookDetail";
    //var imagePath = "Image/" + @Model.Path;
}


<div class="container p-3">
    
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Book Deatail
                </th>
                <th>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="" asp-action="" asp-route-id="" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-controller="" asp-action="" asp-route-id="" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </th>
            </tr>

        </thead>
        <tbody>
                <tr>
                    
                    <td width="80%">
                      
                    <img src="@Url.Content("~/Image/"+Model.Path)" height="100px" width="100px" />

                     </td>

                </tr>
                <tr>
                    <td width="80%">
                    <label asp-for="BookTitle  ">BookTitle:  </label>
                     @Model.BookTitle

                    </td>
                    
                </tr>
                <tr>
                  <td width="30%">
                    <label asp-for="Language  ">Language:  </label>
                    @Model.Language

                  </td>
                </tr>
            <tr>
                <td width="80%">
                    <label asp-for="AuthorName  ">AuthorName:  </label>
                    @Model.AuthorName

                </td>
            </tr>

            
        </tbody>
    </table>
</div>



