@model Book
@{
    ViewData["Title"] = "BookDetail";
    //var imagePath = "Image/" + @Model.Path;
}


<div class="container p-3">
    
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Book Detail
                </th>
                <th>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="Update" asp-route-id="@Model.Id" class="btn  mx-2"> <i class="bi bi-pencil-square"></i> Update</a>

                        <a href="@Url.Action("Delete", "Book", new { id = Model.Id })" onclick="return confirm('Are you sure you want to delete this item?');" class="btn  mx-2"><i class="bi bi-trash-fill"></i>Delete</a>

                    </div>
                </th>
            </tr>

        </thead>
        <tbody>
                <tr>
                    
                    <td width="80%">
                      
                    <img src="@Url.Content("~/Image/"+Model.Path)" height="100px" width="100px" />

                     </td>

                </tr>
                <tr>
                    <td width="80%">
                    <label asp-for="BookTitle  ">BookTitle:  </label>
                     @Model.BookTitle

                    </td>
                    
                </tr>
                <tr>
                  <td width="30%">
                    <label asp-for="Language  ">Language:  </label>
                    @Model.Language

                  </td>
                </tr>
            <tr>
                <td width="80%">
                    <label asp-for="AuthorName  ">AuthorName:  </label>
                    @Model.AuthorName

                </td>
            </tr>

            
        </tbody>
    </table>
    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
</div>



